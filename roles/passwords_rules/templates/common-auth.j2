# Common PAM config file for authentication
# Managed by Ansible.

auth        required            pam_faillock.so preauth audit deny={{ password_policy_faillock_deny }} unlock_time={{ password_policy_faillock_unlock_time }}
auth        [success=1 default=bad] pam_unix.so nullok_secure
auth        [default=die]       pam_faillock.so authfail audit deny={{ password_policy_faillock_deny }} unlock_time={{ password_policy_faillock_unlock_time }}
auth        optional            pam_permit.so
auth        required            pam_env.so
auth        required            pam_fprintd.so # Optional, only if you use fingerprint auth
auth        optional            pam_gnome_keyring.so auto_start
